<%= title 'Features'%>
<%= render partial: 'filter_form' %>
<div class="pa4">
  <div class="overflow-auto">
      <%- unless @features.blank? -%>
          <table class="f6 w-100 mw8 center" cellspacing="0">
            <thead>
              <tr>
                <th class="fw6 bb b--black-20 tl pb3 pr3 bg-white">Title</th>
                <th class="fw6 bb b--black-20 tl pb3 pr3 bg-white">Release</th>
                <th class="fw6 bb b--black-20 tl pb3 pr3 bg-white">Director</th>
                <th class="fw6 bb b--black-20 tl pb3 pr3 bg-white">Cast</th>
              </tr>
            </thead>
            <tbody class="lh-copy">
                <%= render partial: 'feature', collection: @features %>
            </tbody>
          </table>
      <%- else -%>
      <p>There are no items at this time.</p>
      <%- end -%>
  </div>
</div>