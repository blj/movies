<%= form_tag features_path, method: :get,  class: 'center pa4 br2-ns ba b--black-10' do %>
    <div class="measure">
      <label for="director" class="f6 b db mb2">Directed By <span class="normal black-60">(optional)</span></label>
      <select id="director" name="director" class="input-reset ba b--black-20 pa2 mb2 db w-100" aria-describedby="name-desc">
          <option>Choose one</option>
            <%= options_from_collection_for_select(@people, 'id', 'name', selected: params[:director]) %>
      </select>
      <small id="name-desc" class="f6 black-60 db mb2">Choose a name from the list to filter movies directed by that person.</small>
  </div>
<input class="f6 f5-l button-reset pv3 tc bn bg-animate bg-black-70 hover-bg-black white pointer w-100 w-25-m w-20-l br2-ns" type="submit" value="Filter">
<%- end -%>
